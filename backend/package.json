{
  "name": "dmb",
  "scripts": {
    "start": "npm run build && pm2 start pm2config.json --env production && pm2 save",
    "stop": "pm2 list && pm2 stop backend",
    "daemonize": "pm2 startup",
    "log": "pm2 log backend --lines 250",
    "build": "rm -rf dist && tsc && cp -rf src/public dist/public",
    "debug": "npm run kill ; cross-env NODE_ENV=development nodemon",
    "kill": "pkill -f '(swc-node.+backend)'",

    "init": "npx prisma generate && swc-node utils/db_init.ts",
    "migrate": "npx prisma generate && swc-node utils/db_migrate.ts",
    "sync": "npx prisma generate && swc-node utils/db_sync.ts",
    "sync_force": "npx prisma generate && swc-node utils/db_sync_force_reset.ts",
    "gui": "swc-node utils/db_gui.ts",
    "init_mongo": "swc-node src/destroy.ts",
    "test": "rm -rf dist && jest --clearCache && jest --watchAll --verbose --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@prisma/client": "^5.5.2",
    "connect-memcached": "^2.0.0",
    "connect-mongo": "^5.1.0",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-cluster": "^0.0.5",
    "express-rate-limit": "^7.1.4",
    "express-session": "^1.17.3",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "readline": "^1.3.0",
    "redis": "^4.6.10",
    "rotating-file-stream": "^3.1.1",
    "showdown": "^2.1.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@swc-node/jest": "^1.6.8",
    "@swc-node/register": "^1.6.8",
    "@swc/core": "^1.3.95",
    "@swc/helpers": "^0.5.3",
    "@swc/wasm": "^1.3.95",
    "@types/connect-livereload": "^0.6.2",
    "@types/connect-memcached": "^1.0.2",
    "@types/cors": "^2.8.15",
    "@types/express-cluster": "^0.0.3",
    "@types/express-session": "^1.17.9",
    "@types/livereload": "^0.9.4",
    "@types/morgan": "^1.9.7",
    "@types/nodemailer": "^6.4.13",
    "@types/showdown": "^2.0.3",
    "connect-livereload": "^0.6.1",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "livereload": "^0.9.3",
    "prisma-erd-generator": "^1.11.1",
    "typescript": "^5.2.2"
  }
}
